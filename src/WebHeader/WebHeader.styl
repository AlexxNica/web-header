@import '../styles/base'

.siteHeader
  border-bottom 1px solid rgba(black, 0.1)
  background-color white
  text-align left

  &.theme-dark
    +breakpoint("desktop")
      border-bottom 1px solid rgba(white, 0.1)
      background-color transparent
      position absolute
      width 100%
      left 0
      top 0
      z-index 999

  :global(.container)
    width auto

  &.dropdownOpen
    +breakpoint("desktop", "max")
      height 75px

      > nav
        position fixed
        top 0
        left 0
        right 0
        bottom 0
        background-color rgba(white, 0.97)
        z-index 9100

        .collapse
          display block
          height calc(100vh - 75px)
          overflow-y scroll
          padding-top 10px
          padding-bottom 82px

.collapse
  clearfix()

  +breakpoint("desktop", "max")
    display none

.navigation
  clearfix()
  position relative
  list-style-type none
  margin 0
  padding 0

  +breakpoint("desktop")
    vertical-center-elem(28px, $navbar-desktop-height)

.navigationLeft
  composes navigation

  +breakpoint("desktop")
    float left
    margin-left 30px

.navigationRight
  composes navigation

  +breakpoint("desktop", "max")
    position absolute
    bottom 0
    left 0
    right 0
    background-color white
    text-align center
    padding-top 25px
    padding-bottom 25px

    &:before
      content ''
      display block
      background linear-gradient(to bottom, rgba(255, 255, 255, .001) 0%, white 100%)
      bottom 100%
      width 100%
      height 20px
      position absolute
      display block

  +breakpoint("desktop")
    float right

  :global
    .btn
      font-size 11px
      padding 8px 18px

      + .btn
        margin-left 18px

.overflow
  height 100%
  overflow hidden !important
  position fixed
  width 100%

.siteHeader :focus
  outline thin dotted
