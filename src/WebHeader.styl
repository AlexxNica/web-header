@import 'base'

// Global styles

:global
  .section-title
    padding-bottom 10px
    margin 12px 0 10px 0
    font-size 13px
    font-weight 500
    color black
    border-bottom 1px solid $bg-color-gray

// end global styles

.siteHeader
  border-bottom 1px solid rgba(black, 0.1)

  &.theme-dark
    +breakpoint("desktop")
      border-bottom 1px solid rgba(white, 0.1)

  :global(.container)
    width auto

  &.dropdownOpen
    +breakpoint("desktop", "max")
      height 75px

      > nav
        position fixed
        top 0
        left 0
        right 0
        bottom 0
        background-color rgba(white, 0.97)
        z-index 50

        .collapse
          display block
          height calc(100vh - 75px)
          overflow-y scroll
          padding-top 10px
          padding-bottom 82px

.collapse
  clearfix()

  +breakpoint("desktop", "max")
    display none

.navigation
  clearfix()
  position relative
  list-style-type none
  margin 0
  padding 0

  +breakpoint("desktop")
    vertical-center-elem(28px, $navbar-desktop-height)

.navigationLeft
  composes navigation

  +breakpoint("desktop")
    float left
    margin-left 30px

.navigationRight
  composes navigation

  +breakpoint("desktop", "max")
    position absolute
    bottom 0
    left 0
    right 0
    background-color white
    text-align center
    padding-top 25px
    padding-bottom 25px

    &:before
      content ''
      display block
      background linear-gradient(to bottom, transparent 0%, white 100%)
      bottom 100%
      width 100%
      height 20px
      position absolute
      display block


  +breakpoint("desktop")
    float right

  :global
    .btn
      font-size 11px
      padding 8px 18px

      + .btn
        margin-left 18px
