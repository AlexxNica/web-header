$navbar-dark-link-color ?=                 white //$color-text-contrast-light
$navbar-dark-link-hover-color ?=           white

// Navbar toggle
$navbar-toggle-background-color ?=         gray //$color-gray
$navbar-toggle-background-hover-color ?=   black
$color-text ?= black
$bg-color-gray ?= gray

