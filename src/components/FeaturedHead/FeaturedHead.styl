@import '../../styles/base'

.featured
  text-align center
  background-color white
  
  .featured-content
    height 52px
    line-height 52px
    color rgba(black, .64)
    position relative
    display inline-block
    padding-left 10px
    
    &:before
      content ""
      background-color #3445DC
      width 12px
      height 12px
      position absolute
      top 50%
      transform translateY(-50%)
      right 100%
    
    p
      display inline-block
      font-weight 500
      color rgba(black, .84)
    
    span
      font-weight normal
      color rgba(black, .64)
      position relative
      
      &:before
        content ": "
        font-weight 500
        color rgba(black, .84)
        right 100%
    
    a
      color black
      position relative
      padding-right 10px
      margin-left 5px
      
      &:hover
        color rgba(black, .84)
      
      &:after
        content ""
        width 0
        height 0
        border-style solid
        border-width 5px 0 5px 6px
        border-color transparent transparent transparent #eb5224
        position absolute
        top 50%
        transform translateY(-50%)
        left 100%
  
  +breakpoint("desktop", "max")
    border-bottom 1px solid #E6E6E6
    
    &.dropdownOpen
      display none
    
    .featured-content
      p
        color rgba(black, .64)
      span
        display none
  
  &.theme-light
    background-color black
    
    .featured-content
      p
        color rgba(white, .84)
      
      span
        color rgba(white, .64)
      
      a
        color white
        
        &:hover
          color rgba(white, .84)
      
