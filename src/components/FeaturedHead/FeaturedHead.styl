@import '../../styles/base'

.featured
  text-align center
  background-color white
  z-index 9999
  position relative
  
  .featured-content
    height 52px
    line-height 52px
    color rgba(black, .64)
    position relative
    display inline-block
    padding-left 10px
    
    &:before
      content ""
      background-color #3445DC
      width 12px
      height 12px
      position absolute
      top 50%
      transform translateY(-50%)
      right 100%
    
    span
      font-weight normal
      color rgba(black, .64)
      position relative
      font-size 13px
      +breakpoint("desktop")
        font-size 14px
    
    a
      color black
      position relative
      font-size 13px
      margin-left 6px
      +breakpoint("desktop")
        font-size 14px
      
      &:hover
        color rgba(black, .84)
      
    > a
      padding-right 10px
      margin-left 0
        
      &:after
        content ""
        width 0
        height 0
        border-style solid
        border-width 5px 0 5px 6px
        border-color transparent transparent transparent #eb5224
        position absolute
        top 50%
        transform translateY(-50%)
        left 100%
  
  +breakpoint("desktop", "max")
    box-shadow inset 0 -1px 0 0 #E6E6E6
    
    &.dropdownOpen
      display none
    
    .featured-content
      p
        color rgba(black, .64)
      span
        display none
      
      a
        padding 0
        a
          display none
      
      > a
        &:after
          margin-left 10px
  
  &.theme-light
    background-color black
    
    .featured-content
      p
        color rgba(white, .84)
      
      span
        color rgba(white, .64)
      
      a
        color white
        
        &:hover
          color rgba(white, .84)
      
