@import '../../styles/base'

.dropdown
  z-index 1000

  +breakpoint("desktop")
    color $color-text
    background-color white
    border-radius 3px
    box-shadow 0 0 4px rgba(black, .25)
    margin-top 0
    opacity 0
    position absolute
    top 32px
    transition visibility 0s .2s, opacity .2s, margin-top .2s
    visibility hidden
    overflow hidden

    min-width 150px

    pointer-events none

.dropdown.is-open
  +breakpoint("desktop")
    margin-top 20px
    opacity 1
    transition-delay 0s
    visibility visible
    pointer-events initial

.dropdown.twoBlock
  +breakpoint("desktop")
    -webkit-box-orient horizontal
    -webkit-box-direction normal
    -ms-flex-flow row wrap
    flex-flow row wrap
    display -webkit-box
    display -ms-flexbox
    display flex

    > div
      -ms-flex-preferred-size 50%
      flex-basis 50%
      max-width 50%

.platformDropdown
  +breakpoint("desktop")
    width 816px

.solutionsDropdown
  +breakpoint("desktop")
    width 510px

  +breakpoint("desktop", "max")
    header
      display none

.solutionsDropdown.twoBlock
  +breakpoint("desktop")
    > div:nth-child(1)
      -ms-flex-preferred-size 60%
      flex-basis 60%
      max-width 60%

    > div:nth-child(2)
      -ms-flex-preferred-size 40%
      flex-basis 40%
      max-width 40%

.whyDropdown
  +breakpoint("desktop")
    width 590px

.whyDropdown.twoBlock
  +breakpoint("desktop")
    > div:nth-child(1)
      -ms-flex-preferred-size 48%
      flex-basis 48%
      max-width 48%

    > div:nth-child(2)
      -ms-flex-preferred-size 52%
      flex-basis 52%
      max-width 52%

.developersDropdown
  +breakpoint("desktop")
    width 595px
    transform: translateX(-165px);

.developersDropdown.twoBlock
  +breakpoint("desktop")
    > div:nth-child(1)
      -ms-flex-preferred-size 65%
      flex-basis 65%
      max-width 65%

    > div:nth-child(2)
      -ms-flex-preferred-size 35%
      flex-basis 35%
      max-width 35%

.footer-list
  width 100%
  padding 15px 30px
  border-top 1px solid #DEDEDE
  clear both

  &.footer-highlight
    background-color #F2F2F2
    text-align center
    border-top none

  +breakpoint("desktop", "max")
    display none
